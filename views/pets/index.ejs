<%- include("../partials/header") %>

<%- include("../partials/flash") %>
<main class="pet-homepage">
    <img src="/img/orange-bg-logo.png">
    <% if(currentUser) { %>
    <section class="newPost">
        <div>
            <a href="/user/<%= currentUser._id %>" class="username"><%= currentUser.username %></a>
        </div>
        <a href="/pets/new">
            <input type="text" placeholder="Create Post">
        </a>
    </section>
    <% } %>

    <% if(!posts.length) { %>
        <h2>No posts have been made yet. Be the first to Post!</h2>
    <% } %>


    <% posts.reverse().forEach(pet => { %>
    <section class="pet-post">
        <p class="postedBy">
            Posted By: <a href="/user/<%=pet.user.id %>" class="username"><%= pet.user.username %></a> 
            Â· <%=moment(pet.createdAt).fromNow() %>
        </p>
        <p><%= pet.title %></p>
        <a href="/pets/<%= pet._id %>">
            <img src="<%=pet.image %>">
        </a>
    </section>
    <% })%>
    
</main>

<%- include("../partials/footer") %>